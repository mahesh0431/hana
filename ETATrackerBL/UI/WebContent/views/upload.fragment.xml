<core:FragmentDefinition
	xmlns = "sap.m"
	xmlns:core = "sap.ui.core"
	xmlns:unf="sap.ui.unified"
	displayBlock    ="true">
	<Dialog
		title = "Select a 'CSV file'">
		<content>
        	<unf:FileUploader
				id="fileUploader"
				class="sapUiSmallMargin"
				uploadComplete="handleUploadComplete"
				change="onChangeFUP">
			</unf:FileUploader>
    	</content>
		<beginButton>
			<Button
				text="Close"
				press="onCloseDialog">
			</Button>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>